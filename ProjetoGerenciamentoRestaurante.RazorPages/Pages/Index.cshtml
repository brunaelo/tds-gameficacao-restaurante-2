@page
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Index
@using System.Globalization
<link rel="stylesheet" href="~/lib/css/estilo.css"/>
<h1 style="font-family: Brush Script MT, Brush Script Std, cursive; font-size: 60px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.27);">Sabor & Diversidade</h1>

<img class = "img-restaurante" src="~/Images/img-restaurante.png" width="350" height="350" >

<div class="info">
    <div align="center">
    </div>
        <h3>Bem-Vindo</h3>
</div>


    
<style>
    main{
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    .info{
        width: 60vw;
        text-align: center;
        background-color: rgb(255, 255, 255);
        padding: 10px;
        border-radius: 5px;
    }
</style>

<div class="info">
    <div align="center">
    </div>
        <h3>Dashboard Gar√ßons</h3>
        <table align="center" class="table table-bordered table-sm table-hover-custom">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Pedidos Realizados</th>
                    <th scope="col">Total de Vendas</th>
                    <th scope="col">Quantidade de Produtos</th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var pedidoModel in Model.PedidoViewList)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => pedidoModel.Garcon!.Nome) @Html.DisplayFor(model => pedidoModel.Garcon!.Sobrenome)</td>
                        <td>@Html.DisplayFor(model => pedidoModel.countPedidos)</td>
                        <td>R$ @(pedidoModel.totalVendas.ToString("F2"))</td>
                        <td>@Html.DisplayFor(model => pedidoModel.quantidadeTotal)</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-page="/Atendimento/Create" class="btn btn-success"> Fazer Atendimento</a><p></p>
</div>


    
